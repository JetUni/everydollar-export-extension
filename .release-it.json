{
  "hooks": {
    "after:bump": "pnpm run pack"
  },
  "git": {
    "requireUpstream": false,
    "commitMessage": "Release ${version} [skip ci]"
  },
  "github": {
    "release": true,
    "releaseName": "v${version}",
    "assets": ["chrome-extension.zip"],
    "autoGenerate": true,
    "draft": true
  },
  "npm": {
    "publish": false
  }
}
